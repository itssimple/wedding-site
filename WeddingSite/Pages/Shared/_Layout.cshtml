@using Microsoft.AspNetCore.Http
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sol &amp; Chris bröllop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WeddingSite.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Tenor+Sans&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">Sol &amp; Chris bröllop</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Hem</a>
                        </li>
                        <li class="nav-item">
                            @if (Context.Session.Get<Guest>("guest_loggedin") == null)
                            {
                                <a class="nav-link text-dark" asp-area="" asp-page="/Register">Registrering</a>
                            }
                            else
                            {
                                <a class="nav-link text-dark" asp-area="" asp-page="/Profile">Min profil / Anmälan</a>
                            }
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" role="button" data-bs-toggle="dropdown" href="#" aria-expanded="false" id="infoLink">Information</a>
                            <ul class="dropdown-menu" aria-labelledby="infoLink">
                                <li><a class="dropdown-item" asp-page="/WhoAreWe">Historien om Sol och Chris</a></li>
                                <li><a class="dropdown-item" asp-page="/Schedule">Schema / Tider</a></li>
                                <li><a class="dropdown-item" asp-page="/Wedding">Bröllopet</a></li>
                                <li><a class="dropdown-item" asp-page="/Party">Festen</a></li>
                                <li><a class="dropdown-item" asp-page="/Food">Mat och dryck</a></li>
                                <li><a class="dropdown-item" asp-page="/Gifts">Bröllopsgåvor</a></li>
                                <li><a class="dropdown-item" asp-page="/Dresscode">Klädsel</a></li>
                                <li><a class="dropdown-item" asp-page="/Transport">Transport</a></li>
                                <li><a class="dropdown-item" asp-page="/WantToSpeak">Vill du hålla tal?</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Contact">Kontakta oss</a>
                        </li>
                    </ul>
                    <span class="navbar-text">
                        <span class="wedding-countdown"></span>
                    </span>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Sol &amp; Chris bröllop
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
